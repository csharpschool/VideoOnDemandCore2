@page
@using Microsoft.AspNetCore.Identity
@using VideoOnDemand.Data.Data.Entities
@inject SignInManager<User> SignInManager

@model CreateModel
@{
    ViewData["Title"] = "Create Course";
}

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>@ViewData["Title"]</h2>
            <page-button path="Courses/Index" bootstrap-style="primary" glyph="info-sign" description="Back to List"></page-button>
            <page-button path="Index" bootstrap-style="warning" glyph="list-alt" description="Dashboard"></page-button>
            <p></p>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.ImageUrl" class="control-label"></label>
                    <input asp-for="Input.ImageUrl" class="form-control" />
                    <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.MarqueeImageUrl" class="control-label"></label>
                    <input asp-for="Input.MarqueeImageUrl" class="form-control" />
                    <span asp-validation-for="Input.MarqueeImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Title" class="control-label"></label>
                    <input asp-for="Input.Title" class="form-control" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description" class="control-label"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Instructor" class="control-label"></label>
                    <select asp-for="Input.InstructorId" class="form-control" asp-items="ViewBag.Instructors"></select>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
    <div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
